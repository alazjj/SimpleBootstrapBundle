{% macro containerModal(id) %}
<div class="modal fade hide" id="{{ id | default('popupContainer') }}"></div>
{% endmacro %}

{% macro confirmModal(id) %}
<div class="modal fade hide" id="{{ id | default('confirmContainer') }}">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{{ 'modal.alert.title' | trans  }}</h3>
    </div>

    <div class="modal-body"></div>

    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">
            {{ 'modal.confirm.close' | trans  }}
        </a>
        <a href="#" data-action="confirm" class="btn btn-primary">
            {{ 'modal.confirm.title' | trans  }}
        </a>
    </div>
</div>
{% endmacro %}

{% macro alertModal(id) %}
<div class="modal fade hide" id="{{ id | default('alertContainer') }}">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>{{ 'modal.alert.title' | trans  }}</h3>
    </div>

    <div class="modal-body"></div>

    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">
            {{ 'modal.alert.ok' | trans  }}
        </a>
    </div>
</div>
{% endmacro %}